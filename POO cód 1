using System;

class Investimento
{
    public double ValorPresente { get; set; }
    public double TaxaJuros { get; set; }
    public int Meses { get; set; }
    public int Dias { get; set; }

    public Investimento(double valorPresente, double taxaJuros, int meses, int dias)
    {
        ValorPresente = valorPresente;
        TaxaJuros = taxaJuros / 100;
        Meses = meses;
        Dias = dias;
    }

    public double CalcularRendimentoFuturo()
    {
        double diasParaMeses = Dias / 30.0;
        double periodoTotal = Meses + diasParaMeses;
        return ValorPresente * Math.Pow(1 + TaxaJuros, periodoTotal);
    }
}

class Program
{
    static void Main()
    {
        Console.Write("Digite o Valor Presente Investido: ");
        double valorPresente = Convert.ToDouble(Console.ReadLine());

        Console.Write("Digite a Taxa de Juros (em %): ");
        double taxaJuros = Convert.ToDouble(Console.ReadLine());

        Console.Write("Digite o Número de Meses: ");
        int meses = Convert.ToInt32(Console.ReadLine());

        Console.Write("Digite o Número de Dias: ");
        int dias = Convert.ToInt32(Console.ReadLine());

        Investimento investimento = new Investimento(valorPresente, taxaJuros, meses, dias);
        double rendimentoFuturo = investimento.CalcularRendimentoFuturo();

        Console.WriteLine($"\nRendimento Futuro: {rendimentoFuturo:C}");
    }
}
